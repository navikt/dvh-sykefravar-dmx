[sqlfluff]
templater = dbt
dialect = oracle

[sqlfluff:indentation]
tab_space_size = 2

[sqlfluff:rules]
# The tab_space_size setting has been moved to the [sqlfluff:indentation] section

[sqlfluff:rules:L010]
# Keywords
capitalisation_policy = upper

[sqlfluff:rules:L011]
# Table aliasing
aliasing = implicit
